{% extends 'layouts/products.html.twig' %}

{% block title %}Выберите категорию{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-4 p-4">
                <h5 class="my-4">Выберите бренд</h5>
                <div class="list-group">
                    {% for brand in brands %}
                        <a href="{{ path('brandProducts', {'brandId': brand.id}) }}"
                           class="list-group-item list-group-item-action">
                            {{ brand.name }}
                        </a>
                    {% endfor %}
                </div>
            </div>
            <div class="col-4 p-4">
                <h5 class="my-4">Выберите категорию</h5>
                <div class="list-group">
                    {% for category in categories %}
                        <a href="{{ path('categoryProducts', {'categoryId': category.id}) }}"
                           class="list-group-item list-group-item-action">
                            {{ category.name }}
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}